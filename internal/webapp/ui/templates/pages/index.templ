package pages

import "github.com/maximekuhn/expresso/internal/webapp/ui/components/forms"

templ Index() {
	@Page(indexBody())
}

templ indexBody() {
	<div>
		<h1>Home</h1>
		<div>
			<h2>Groups</h2>
			<div hx-get="/groups" hx-target="this" hx-swap="outerHTML" hx-trigger="load"></div>
		</div>
		<div>
			<h2>Create group</h2>
			@forms.CreateGroupForm()
		</div>
	</div>
}
